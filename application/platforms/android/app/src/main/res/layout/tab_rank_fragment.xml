<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/position_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp">

                    <LinearLayout
                        android:id="@+id/position_2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:visibility="invisible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="6dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="2°"
                            android:textColor="@color/black60" />

                        <com.bonacogo.gameplate.other.MaskableFrameLayout
                            android:id="@+id/frm_mask_animated_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:mask="@drawable/ic_mask_circle"
                            app:porterduffxfermode="DST_IN">

                            <ImageView
                                android:id="@+id/img_user_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop"
                                android:tint="@color/black80"
                                app:srcCompat="@drawable/ic_profile"
                                tool:src="@drawable/image_loading" />
                        </com.bonacogo.gameplate.other.MaskableFrameLayout>

                        <TextView
                            android:id="@+id/nickname_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="@font/poppins_medium"
                            android:includeFontPadding="false"
                            android:singleLine="false"
                            android:textAlignment="center"
                            android:textColor="@color/black70"
                            tool:text="Luca Cogo" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_score_bg">

                            <TextView
                                android:id="@+id/score_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginEnd="20dp"
                                android:layout_marginBottom="4dp"
                                android:fontFamily="@font/poppins_semibold"
                                android:includeFontPadding="false"
                                android:textColor="@color/black60"
                                tool:text="18" />
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/position_1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:visibility="invisible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="6dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="1°"
                            android:textColor="@color/black60" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <com.bonacogo.gameplate.other.MaskableFrameLayout
                                android:id="@+id/frm_mask_animated_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                app:mask="@drawable/ic_mask_circle"
                                app:porterduffxfermode="DST_IN">

                                <ImageView
                                    android:id="@+id/img_user_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0"
                                    android:adjustViewBounds="true"
                                    android:scaleType="centerCrop"
                                    android:tint="@color/black80"
                                    app:srcCompat="@drawable/ic_profile"
                                    tool:src="@drawable/image_loading" />
                            </com.bonacogo.gameplate.other.MaskableFrameLayout>

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@id/frm_mask_animated_1"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="-20dp"
                                android:adjustViewBounds="true"
                                app:srcCompat="@drawable/ic_trophy_round" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/nickname_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:includeFontPadding="false"
                            android:singleLine="false"
                            android:textAlignment="center"
                            android:textColor="@color/black70"
                            tool:text="Valerio Bona" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_score_bg">

                            <TextView
                                android:id="@+id/score_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginEnd="20dp"
                                android:layout_marginBottom="4dp"
                                android:fontFamily="@font/poppins_semibold"
                                android:includeFontPadding="false"
                                android:textColor="@color/black60"
                                tool:text="28" />
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/position_3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:visibility="invisible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="6dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="3°"
                            android:textColor="@color/black60" />

                        <com.bonacogo.gameplate.other.MaskableFrameLayout
                            android:id="@+id/frm_mask_animated_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:mask="@drawable/ic_mask_circle"
                            app:porterduffxfermode="DST_IN">

                            <ImageView
                                android:id="@+id/img_user_3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop"
                                android:tint="@color/black80"
                                app:srcCompat="@drawable/ic_profile"
                                tool:src="@drawable/image_loading" />
                        </com.bonacogo.gameplate.other.MaskableFrameLayout>

                        <TextView
                            android:id="@+id/nickname_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="@font/poppins_medium"
                            android:includeFontPadding="false"
                            android:singleLine="false"
                            android:textAlignment="center"
                            android:textColor="@color/black70"
                            tool:text="Valerio Bonacina" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_score_bg">

                            <TextView
                                android:id="@+id/score_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginEnd="20dp"
                                android:layout_marginBottom="4dp"
                                android:fontFamily="@font/poppins_semibold"
                                android:includeFontPadding="false"
                                android:textColor="@color/black60"
                                tool:text="15" />
                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/secondaryColor"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/no_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/no_rankings_found"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/position_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/secondaryLightColor40"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:fontFamily="@font/poppins_medium"
                    android:includeFontPadding="false"
                    android:minWidth="20dp"
                    android:text="4°"
                    android:textColor="@color/black60" />

                <com.bonacogo.gameplate.other.MaskableFrameLayout
                    android:id="@+id/frm_mask_animated_4"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="0"
                    app:mask="@drawable/ic_mask_circle"
                    app:porterduffxfermode="DST_IN">

                    <ImageView
                        android:id="@+id/img_user_4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:tint="@color/black80"
                        app:srcCompat="@drawable/ic_profile"
                        tool:src="@drawable/image_loading" />
                </com.bonacogo.gameplate.other.MaskableFrameLayout>

                <TextView
                    android:id="@+id/nickname_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium"
                    android:includeFontPadding="false"
                    android:textColor="@color/black70"
                    tool:text="Gianfranco Asdrubalini" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="0"
                    android:background="@drawable/ic_score_bg">

                    <TextView
                        android:id="@+id/score_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:includeFontPadding="false"
                        android:textColor="@color/black60"
                        tool:text="28" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/position_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:fontFamily="@font/poppins_medium"
                    android:includeFontPadding="false"
                    android:minWidth="20dp"
                    android:text="5°"
                    android:textColor="@color/black60" />

                <com.bonacogo.gameplate.other.MaskableFrameLayout
                    android:id="@+id/frm_mask_animated_5"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="0"
                    app:mask="@drawable/ic_mask_circle"
                    app:porterduffxfermode="DST_IN">

                    <ImageView
                        android:id="@+id/img_user_5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:tint="@color/black80"
                        app:srcCompat="@drawable/ic_profile"
                        tool:src="@drawable/image_loading" />
                </com.bonacogo.gameplate.other.MaskableFrameLayout>

                <TextView
                    android:id="@+id/nickname_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium"
                    android:includeFontPadding="false"
                    android:textColor="@color/black70"
                    tool:text="Gianfranco Asdrubalini" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="0"
                    android:background="@drawable/ic_score_bg">

                    <TextView
                        android:id="@+id/score_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:includeFontPadding="false"
                        android:textColor="@color/black60"
                        tool:text="28" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/position_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/secondaryLightColor40"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:fontFamily="@font/poppins_medium"
                    android:includeFontPadding="false"
                    android:minWidth="20dp"
                    android:text="6°"
                    android:textColor="@color/black60" />

                <com.bonacogo.gameplate.other.MaskableFrameLayout
                    android:id="@+id/frm_mask_animated_6"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="0"
                    app:mask="@drawable/ic_mask_circle"
                    app:porterduffxfermode="DST_IN">

                    <ImageView
                        android:id="@+id/img_user_6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:tint="@color/black80"
                        app:srcCompat="@drawable/ic_profile"
                        tool:src="@drawable/image_loading" />
                </com.bonacogo.gameplate.other.MaskableFrameLayout>

                <TextView
                    android:id="@+id/nickname_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium"
                    android:includeFontPadding="false"
                    android:textColor="@color/black70"
                    tool:text="Gianfranco Asdrubalini" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="0"
                    android:background="@drawable/ic_score_bg">

                    <TextView
                        android:id="@+id/score_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:includeFontPadding="false"
                        android:textColor="@color/black60"
                        tool:text="28" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/position_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:fontFamily="@font/poppins_medium"
                    android:includeFontPadding="false"
                    android:minWidth="20dp"
                    android:text="7°"
                    android:textColor="@color/black60" />

                <com.bonacogo.gameplate.other.MaskableFrameLayout
                    android:id="@+id/frm_mask_animated_7"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="0"
                    app:mask="@drawable/ic_mask_circle"
                    app:porterduffxfermode="DST_IN">

                    <ImageView
                        android:id="@+id/img_user_7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:tint="@color/black80"
                        app:srcCompat="@drawable/ic_profile"
                        tool:src="@drawable/image_loading" />
                </com.bonacogo.gameplate.other.MaskableFrameLayout>

                <TextView
                    android:id="@+id/nickname_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium"
                    android:includeFontPadding="false"
                    android:textColor="@color/black70"
                    tool:text="Gianfranco Asdrubalini" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="0"
                    android:background="@drawable/ic_score_bg">

                    <TextView
                        android:id="@+id/score_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:includeFontPadding="false"
                        android:textColor="@color/black60"
                        tool:text="28" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/position_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/secondaryColor"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingTop="5dp"
        android:paddingEnd="12dp"
        android:paddingBottom="5dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scroll">

        <TextView
            android:id="@+id/user_pos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:fontFamily="@font/poppins_medium"
            android:includeFontPadding="false"
            android:minWidth="20dp"
            android:textColor="@color/white"
            tool:text="16°" />

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="0">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/frm_mask_animated_user"
                android:layout_alignTop="@id/frm_mask_animated_user"
                android:layout_alignEnd="@id/frm_mask_animated_user"
                android:layout_alignBottom="@id/frm_mask_animated_user"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/ic_mask_circle" />

            <com.bonacogo.gameplate.other.MaskableFrameLayout
                android:id="@+id/frm_mask_animated_user"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                app:mask="@drawable/ic_mask_circle"
                app:porterduffxfermode="DST_IN">

                <ImageView
                    android:id="@+id/img_user"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:tint="@color/black80"
                    app:srcCompat="@drawable/ic_profile"
                    tool:src="@drawable/image_loading" />
            </com.bonacogo.gameplate.other.MaskableFrameLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/nickname_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_medium"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            tool:text="Gianfranco Asdrubalini" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0"
            android:background="@drawable/ic_score_bg"
            android:backgroundTint="@color/white">

            <TextView
                android:id="@+id/score_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/poppins_semibold"
                android:includeFontPadding="false"
                android:textColor="@color/secondaryColor"
                tool:text="28" />
        </RelativeLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>