<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:elevation="1dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/game_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:clickable="false"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:rippleColor="@android:color/transparent">

        <RelativeLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/card_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="1dp">

                <LinearLayout
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_game_bg">

                    <LinearLayout
                        android:id="@+id/container_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="10dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="10dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="5dp"
                                android:adjustViewBounds="true"
                                app:srcCompat="@drawable/ic_play" />

                            <TextView
                                android:id="@+id/game"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:includeFontPadding="false"
                                android:textColor="@color/black80"
                                android:textSize="14sp"
                                tool:text="FlapShimi" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="25dp"
                            android:layout_weight="0"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="5dp"
                                android:adjustViewBounds="true"
                                android:tint="@color/black60"
                                android:tintMode="src_in"
                                app:srcCompat="@drawable/ic_restaurant" />

                            <TextView
                                android:id="@+id/restaurant"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:includeFontPadding="false"
                                android:singleLine="true"
                                android:textColor="@color/black60"
                                android:textSize="12sp"
                                tool:text="Ouya Gourmet â€¢ Sushi" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:includeFontPadding="false"
                                android:lineSpacingExtra="0sp"
                                android:lineSpacingMultiplier="0.9"
                                android:textColor="@color/black40"
                                android:textSize="12sp"
                                android:visibility="gone"
                                tool:text="Milano Bicocca (MI),\nVia Chiese" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/rating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="4dp"
                                android:layout_weight="0"
                                android:fontFamily="@font/poppins_medium"
                                android:includeFontPadding="false"
                                android:textColor="@color/gold"
                                android:textSize="12sp"
                                tool:text="4,0" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp"
                                android:layout_weight="0"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/star_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="2dp"
                                    android:layout_weight="0"
                                    android:tint="@color/lightGray2"
                                    app:srcCompat="@drawable/ic_star_full" />

                                <ImageView
                                    android:id="@+id/star_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="2dp"
                                    android:layout_weight="0"
                                    android:tint="@color/lightGray2"
                                    app:srcCompat="@drawable/ic_star_full" />

                                <ImageView
                                    android:id="@+id/star_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="2dp"
                                    android:layout_weight="0"
                                    android:tint="@color/lightGray2"
                                    app:srcCompat="@drawable/ic_star_full" />

                                <ImageView
                                    android:id="@+id/star_4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="2dp"
                                    android:layout_weight="0"
                                    android:tint="@color/lightGray2"
                                    app:srcCompat="@drawable/ic_star_full" />

                                <ImageView
                                    android:id="@+id/star_5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0"
                                    android:tint="@color/lightGray2"
                                    app:srcCompat="@drawable/ic_star_full" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/num_feedback"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_weight="0"
                                android:fontFamily="@font/poppins_medium"
                                android:includeFontPadding="false"
                                android:textColor="@color/lightGray2"
                                android:textSize="12sp"
                                tool:text="(213)" />
                        </LinearLayout>

                    </LinearLayout>

                    <com.bonacogo.gameplate.other.MaskableFrameLayout
                        android:id="@+id/frm_mask_animated"
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        app:mask="@drawable/ic_mask_holder_img"
                        app:porterduffxfermode="DST_IN">

                        <ImageView
                            android:id="@+id/img_game"
                            android:layout_width="140dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            tool:src="@drawable/image_loading" />
                    </com.bonacogo.gameplate.other.MaskableFrameLayout>


                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/play_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/card_container"
                android:layout_centerHorizontal="true"
                android:elevation="1dp"
                android:padding="1dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/play_ll"
                    android:layout_alignTop="@id/play_ll"
                    android:layout_alignEnd="@id/play_ll"
                    android:layout_alignBottom="@id/play_ll"
                    app:srcCompat="@drawable/button_bg_02" />

                <LinearLayout
                    android:id="@+id/play_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/play_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/button_bg_01"
                        android:fontFamily="@font/poppins_medium"
                        android:minWidth="140dp"
                        android:paddingStart="40dp"
                        android:paddingEnd="40dp"
                        android:stateListAnimator="@null"
                        android:text="@string/play"
                        android:textColor="@color/white" />
                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:id="@+id/play_container_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/play_container"
                android:layout_alignTop="@id/play_container"
                android:layout_alignEnd="@id/play_container"
                android:layout_alignBottom="@id/play_container"
                android:elevation="0dp"
                android:src="@drawable/play_container_bg" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>


</LinearLayout>