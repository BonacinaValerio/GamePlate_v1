<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black70"
    tools:context=".fragment.Tutorial01">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="180dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/vignetta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="30dp"
            android:paddingEnd="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/text"
                    android:layout_alignTop="@id/text"
                    android:layout_alignEnd="@id/text"
                    android:layout_alignBottom="@id/text"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:maxHeight="500dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_vignetta00" />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/poppins_medium"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="8sp"
                    android:padding="30dp"
                    android:textAlignment="center"
                    android:textColor="@color/black80"
                    android:textSize="14sp"
                    tools:text="Registrati per entrare nel fantastico mondo di GamePlate!" />
            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="-2dp"
                android:layout_marginEnd="50dp"
                android:src="@drawable/ic_pin_vignetta" />

        </LinearLayout>

        <ImageView
            android:id="@+id/poncho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:adjustViewBounds="true"
            tools:src="@drawable/felice" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/vignetta_utente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignStart="@id/button"
            android:layout_alignTop="@id/button"
            android:layout_alignEnd="@id/button"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_vignetta_utente" />

        <LinearLayout
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_bg_01"
                android:fontFamily="@font/poppins_medium"
                android:minWidth="140dp"
                android:stateListAnimator="@null"
                android:textAllCaps="false"
                android:textColor="@color/white"
                tools:text="Fantastico!" />
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>