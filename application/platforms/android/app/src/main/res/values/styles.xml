<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MyApp" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="android:statusBarColor">@color/secondaryDarkColor</item>
    </style>
    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="Widget.Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <item name="android:minWidth">28dp</item>
        <item name="android:minHeight">28dp</item>
        <item name="backgroundTint">@color/secondaryColor</item>
        <item name="android:padding">0dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Tooltip</item>
    </style>

    <style name="ShapeAppearance.Tooltip" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">14dp</item>
    </style>

    <style name="PresetLayoutButton">
        <item name="android:background">@drawable/background_selector_preset_button</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <style name="CategoryRestaurant">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black60</item>
    </style>

    <style name="tab_rank_label">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="ShapeAppearanceOverlay.MyApp.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="SwitchCompatStyle">
        <item name="trackTint">@color/switch_color_track</item>
    </style>

    <style name="Theme_Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>

    </style>

</resources>