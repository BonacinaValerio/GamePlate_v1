<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="1dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/ticket_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_centerInParent="true"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:rippleColor="@android:color/transparent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/mask_img"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_mask_circle"
                android:tint="@color/secondaryLightColor" />

            <androidx.cardview.widget.CardView
                android:id="@+id/game_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/secondaryLightColor"
                app:cardElevation="0dp"
                android:elevation="1dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="70dp"
                app:contentPaddingTop="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="@string/you_won_a_ticket"
                        android:textAlignment="center"
                        android:textColor="@color/black70"
                        android:textSize="20sp"
                        android:fontFamily="@font/poppins_semibold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:includeFontPadding="false"
                        android:text= "@string/at"
                        android:textColor="@color/black60"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins"
                        />

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:textAlignment="center"
                        tools:text="Ouya Gourmet"
                        android:includeFontPadding="false"
                        android:textColor="@color/black70"
                        android:textSize="20sp"
                        android:fontFamily="@font/poppins_medium"
                        />


                    <ImageView
                        android:id="@+id/imageSlide"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/image_loading"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/gray"
                        android:layout_alignBottom="@+id/imageSlide"
                        android:textAlignment="center"
                        android:text="@string/expires_in"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_medium"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingVertical="5dp"
                        android:orientation="vertical"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/days"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/poppins_medium"
                                android:includeFontPadding="false"
                                android:textAlignment="center"
                                android:textSize="20sp"/>


                            <TextView
                                android:id="@+id/hour"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/poppins_medium"
                                android:includeFontPadding="false"
                                android:textAlignment="center"
                                android:textSize="20sp"/>

                            <TextView
                                android:id="@+id/minutes"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/poppins_medium"
                                android:includeFontPadding="false"
                                android:textAlignment="center"
                                android:textSize="20sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-6dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/poppins_medium"
                                android:includeFontPadding="false"
                                android:text="@string/days"
                                android:textAlignment="center"
                                android:textAllCaps="true"
                                android:textSize="10sp" />


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/poppins_medium"
                                android:includeFontPadding="false"
                                android:text="@string/hours"
                                android:textAlignment="center"
                                android:textAllCaps="true"
                                android:textSize="10sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/poppins_medium"
                                android:includeFontPadding="false"
                                android:text="@string/minutes"
                                android:textAlignment="center"
                                android:textAllCaps="true"
                                android:textSize="10sp" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>








            </androidx.cardview.widget.CardView>






            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/mask_img"
                android:layout_alignTop="@id/mask_img"
                android:layout_alignEnd="@id/mask_img"
                android:layout_alignBottom="@id/mask_img"
                android:layout_margin="15dp">

                <ImageView
                    android:id="@+id/reward_bg"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/ic_reward_bg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignStart="@id/reward_bg"
                    android:layout_alignTop="@id/reward_bg"
                    android:layout_alignEnd="@id/reward_bg"
                    android:layout_alignBottom="@id/reward_bg"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/label_reward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/black60"
                        android:textSize="24sp"
                        tools:text="50%" />

                    <ImageView
                        android:id="@+id/img_reward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        tools:src="@drawable/ic_ticket"
                        tools:srcCompat="@drawable/ic_ticket" />
                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>



</RelativeLayout>
