<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- top-left to bottom-right line -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/lightGray" />
        </shape>
    </item>
    <item
        android:left="50dp"
        android:top="50dp"
        android:bottom="50dp"
        android:right="50dp">
        <rotate android:fromDegrees="45">
            <shape android:shape="line">
                <size
                    android:width="24dp"
                    android:height="24dp"/>
                <stroke
                    android:color="#f00"
                    android:width="2dp"/>
            </shape>
        </rotate>
    </item>

    <!-- top-right to bottom-left line -->
    <item
        android:left="50dp"
        android:top="50dp"
        android:bottom="50dp"
        android:right="50dp">
        <rotate android:fromDegrees="-45">
            <shape android:shape="line">
                <size
                    android:width="24dp"
                    android:height="24dp"/>
                <stroke
                    android:color="#f00"
                    android:width="2dp"/>
            </shape>
        </rotate>
    </item>
</layer-list>
