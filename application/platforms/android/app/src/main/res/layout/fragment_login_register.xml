<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_01"
    tools:context=".fragment.LoginScreen">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="6dp"
                android:adjustViewBounds="true"
                android:background="@drawable/button_bg_03"
                android:padding="17dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_arrow_left" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingTop="66dp"
                android:paddingBottom="66dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="100dp"
                    android:layout_marginEnd="100dp"
                    android:adjustViewBounds="true"
                    android:maxHeight="300dp"
                    android:src="@drawable/logo_circle" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/poppins_semibold"
                    android:textAlignment="center"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="30sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:paddingStart="50dp"
                    android:paddingEnd="50dp">


                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_bg_02"
                        android:drawableStart="@drawable/ic_email_drawable"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:fontFamily="@font/poppins"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:paddingStart="20dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="8dp"
                        android:singleLine="true"
                        android:textColorHint="@color/secondaryLightColor"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/password1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/button_bg_02"
                        android:drawableStart="@drawable/ic_password_drawable"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:fontFamily="@font/poppins"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:paddingStart="20dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="8dp"
                        android:singleLine="true"
                        android:textColorHint="@color/secondaryLightColor"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/password2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/button_bg_02"
                        android:drawableStart="@drawable/ic_password_drawable"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:fontFamily="@font/poppins"
                        android:hint="@string/insert_password_again"
                        android:inputType="textPassword"
                        android:paddingStart="20dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="8dp"
                        android:singleLine="true"
                        android:textColorHint="@color/secondaryLightColor"
                        android:textSize="14sp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/forgot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="16dp"
                        android:background="@null"
                        android:fontFamily="@font/poppins"
                        android:minHeight="0dp"
                        android:stateListAnimator="@null"
                        android:text="@string/forgot_password"
                        android:textAllCaps="false"
                        android:textColor="@color/button_text_color"
                        android:textSize="12sp"
                        tools:visibility="gone" />

                    <Button
                        android:id="@+id/interact"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="100dp"
                        android:background="@drawable/button_bg_04"
                        android:fontFamily="@font/poppins_medium"
                        android:stateListAnimator="@null"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</FrameLayout>
